{
    "push": {
      "name": "RudyJessop/Corebox"
    },
    "variables": {
        "atlas_username": "RudyJessop",
        "atlas_name": "Corebox"
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/base.sh",
                "scripts/mtod.sh",
                "scripts/node.sh",
                "scripts/virtualbox.sh",
                "scripts/vagrant.sh",
                "scripts/vmware.sh",
                "scripts/apache.sh",
                "scripts/dep.sh",
                "scripts/redis.sh",
                "scripts/cleanup.sh",
                "scripts/apacheconf.sh",
                "scripts/zerodisk.sh"
            ],
            "override": {
                "virtualbox-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                },
                "vmware-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
